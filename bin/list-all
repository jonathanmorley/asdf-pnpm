#!/usr/bin/env bash

set -Eeuo pipefail

function sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n |
    awk '{print $2}'
}

curl --silent --fail --show-error --location https://registry.npmjs.org/pnpm |
  grep -Eo '"version":"[^"]+"' |
  cut -d\" -f4 |
  sort_versions |
  xargs
