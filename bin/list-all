#!/usr/bin/env bash
# shellcheck shell=bash

set -Eeuo pipefail

function sort_versions() {
  sed 'h; s/[-]/./g; s/\([[:digit:]]\+\)/.\1/g; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1n -k 2,2n -k 3,3n -k 4,4n -k 5,5n |
    awk '{print $2}'
}

FALLBACK_REGISTRY='https://registry.npmjs.org/'

REGISTRY="${NPM_CONFIG_REGISTRY:-$FALLBACK_REGISTRY/}"
if command -v npm 1>/dev/null; then
  REGISTRY=$(npm config get registry)
fi

fetch_versions() {
  local reg="$1"
  local response
  local curl_opts=(--silent --show-error --fail --location --header 'Accept: application/vnd.npm.install-v1+json')
  
  # Use explicit CA bundle if SSL_CERT_FILE is set (for Nix sandbox compatibility)
  if [[ -n "${SSL_CERT_FILE:-}" ]]; then
    curl_opts+=(--cacert "$SSL_CERT_FILE")
  fi
  
  if ! response=$(curl "${curl_opts[@]}" "${reg%/}/pnpm" 2>&1); then
    echo >&2 "Failed to fetch versions from ${reg}: ${response}"
    return 1
  fi
  echo "$response" |
    grep -Eo '"[0-9]+\.[0-9]+\.[0-9]+[^"]*":\{"name":"pnpm"' |
    grep -Eo '^"[^"]+"' |
    tr -d '"' |
    sort_versions |
    xargs
}

# Try with configured registry first, fall back to default only if it's different and the first attempt fails
if [ "${REGISTRY%/}" == "${FALLBACK_REGISTRY%/}" ]; then
  fetch_versions "$REGISTRY"
else
  fetch_versions "$REGISTRY" || fetch_versions "$FALLBACK_REGISTRY"
fi
